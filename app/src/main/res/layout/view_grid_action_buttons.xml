<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/gridActionButtonAdd"
        android:layout_width="@dimen/action_button_middle"
        android:layout_height="@dimen/action_button_middle"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_add_group"
        android:background="@drawable/circle_border_shape"
        android:scaleType="fitXY"
        android:padding="@dimen/action_button_padding"
        android:layout_margin="@dimen/action_button_margin"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/gridActionButtonCall"
        android:layout_width="@dimen/action_button_middle"
        android:layout_height="@dimen/action_button_middle"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_call"
        android:background="@drawable/circle_border_shape"
        android:scaleType="fitXY"
        android:padding="@dimen/action_button_padding"
        android:layout_margin="@dimen/action_button_margin"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/gridActionButtonVideo"
        android:layout_width="@dimen/action_button_middle"
        android:layout_height="@dimen/action_button_middle"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_video"
        android:background="@drawable/circle_border_shape"
        android:scaleType="fitXY"
        android:padding="@dimen/action_button_padding"
        android:layout_margin="@dimen/action_button_margin"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/gridActionButtonEdit"
        android:layout_width="@dimen/action_button_large"
        android:layout_height="@dimen/action_button_large"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_edit"
        android:background="@drawable/circle_border_shape"
        android:scaleType="fitXY"
        android:padding="@dimen/action_button_padding"
        android:layout_margin="@dimen/action_button_margin"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/gridActionButtonInfo"
        android:layout_width="@dimen/action_button_large"
        android:layout_height="@dimen/action_button_large"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_about"
        android:background="@drawable/circle_border_shape"
        android:scaleType="fitXY"
        android:padding="@dimen/action_button_padding"
        android:layout_margin="@dimen/action_button_margin" />

</LinearLayout>